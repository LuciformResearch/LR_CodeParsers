{
  "name": "@luciformresearch/codeparsers",
  "version": "0.2.0",
  "description": "Unified code parsers for TypeScript, Python, HTML, CSS, Vue, Svelte, Markdown and more with tree-sitter WASM bindings. Works in Node.js and Browser.",
  "license": "LRSL-1.1 (See LICENSE file for more information)",
  "author": "Lucie Defraiteur <luciedefraiteur@luciformresearch.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuciformResearch/LR_CodeParsers.git"
  },
  "bugs": {
    "url": "https://github.com/LuciformResearch/LR_CodeParsers/issues"
  },
  "homepage": "https://github.com/LuciformResearch/LR_CodeParsers#readme",
  "type": "module",
  "main": "./dist/esm/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "keywords": [
    "parser",
    "typescript",
    "python",
    "html",
    "css",
    "scss",
    "vue",
    "svelte",
    "markdown",
    "tree-sitter",
    "ast",
    "code-analysis",
    "wasm",
    "esm",
    "browser"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "browser": "./dist/esm/index.js",
      "import": "./dist/esm/index.js",
      "default": "./dist/esm/index.js"
    },
    "./typescript": {
      "types": "./dist/types/typescript/index.d.ts",
      "browser": "./dist/esm/typescript/index.js",
      "import": "./dist/esm/typescript/index.js"
    },
    "./python": {
      "types": "./dist/types/python/index.d.ts",
      "browser": "./dist/esm/python/index.js",
      "import": "./dist/esm/python/index.js"
    },
    "./html": {
      "types": "./dist/types/html/index.d.ts",
      "browser": "./dist/esm/html/index.js",
      "import": "./dist/esm/html/index.js"
    },
    "./css": {
      "types": "./dist/types/css/index.d.ts",
      "browser": "./dist/esm/css/index.js",
      "import": "./dist/esm/css/index.js"
    },
    "./scss": {
      "types": "./dist/types/scss/index.d.ts",
      "browser": "./dist/esm/scss/index.js",
      "import": "./dist/esm/scss/index.js"
    },
    "./vue": {
      "types": "./dist/types/vue/index.d.ts",
      "browser": "./dist/esm/vue/index.js",
      "import": "./dist/esm/vue/index.js"
    },
    "./svelte": {
      "types": "./dist/types/svelte/index.d.ts",
      "browser": "./dist/esm/svelte/index.js",
      "import": "./dist/esm/svelte/index.js"
    },
    "./markdown": {
      "types": "./dist/types/markdown/index.d.ts",
      "browser": "./dist/esm/markdown/index.js",
      "import": "./dist/esm/markdown/index.js"
    },
    "./generic": {
      "types": "./dist/types/generic/index.d.ts",
      "browser": "./dist/esm/generic/index.js",
      "import": "./dist/esm/generic/index.js"
    },
    "./wasm": {
      "types": "./dist/types/wasm/index.d.ts",
      "browser": "./dist/esm/wasm/index.js",
      "import": "./dist/esm/wasm/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist",
    "LICENSE",
    "README.md",
    "API_GUIDE.md"
  ],
  "scripts": {
    "clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.esm.json && node scripts/fix-esm-extensions.mjs",
    "build:types": "tsc -p tsconfig.types.json",
    "copy:grammars": "cp -r src/wasm/grammars dist/esm/wasm/",
    "build:wasm": "bash scripts/build-wasm.sh",
    "build": "npm run clean && npm run build:esm && npm run build:types && npm run copy:grammars",
    "prepublishOnly": "npm run build",
    "test": "vitest run",
    "test:browser": "npx tsx tests/browser/browser.test.ts",
    "test:all": "npm run test && npm run test:browser",
    "test:ci": "vitest run --coverage --reporter=default",
    "lint": "eslint . --ext .ts,.tsx --max-warnings=0",
    "format": "prettier -w ."
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "web-tree-sitter": "0.25.10"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "c8": "^9.1.0",
    "eslint": "^9.0.0",
    "playwright": "^1.57.0",
    "prettier": "^3.3.0",
    "typescript": "^5.7.2",
    "vitest": "^2.0.0"
  }
}
